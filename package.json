{
    "name": "failfree",
    "version": "2.0.0",
    "author": "Michael Hanus <mh@informatik.uni-kiel.de>",
    "synopsis": "A tool to verify whether a Curry program executes without failures",
    "category": [ "Programming", "Analysis", "Verification" ],
    "license": "BSD-3-Clause",
    "licenseFile": "LICENSE",
    "dependencies": {
        "cass-analysis"      : ">= 3.0.0",
        "cass"               : ">= 3.0.0",
        "flatcurry"          : ">= 3.0.0",
        "flatcurry-annotated": ">= 3.0.0",
        "flatcurry-typed"    : ">= 2.0.0",
        "showflatcurry"      : ">= 2.0.0",
        "wl-pprint"          : ">= 2.0.0"
     },
    "compilerCompatibility": {
        "pakcs": ">= 2.0.0",
        "kics2": ">= 2.0.0"
    },
    "configModule": "PackageConfig",
    "executable": {
        "name"   : "curry-failfree",
        "main"   : "Main",
        "options": { "kics2" : ":set rts -T" }
    },
    "testsuite": {
        "src-dir": "examples",
        "script": "test.sh",
        "options": "-v"
    },
    "source": {
        "git": "https://git.ps.informatik.uni-kiel.de/curry-packages/failfree.git",
        "tag": "$version"
    }
}
